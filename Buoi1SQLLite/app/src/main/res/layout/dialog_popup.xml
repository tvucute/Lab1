<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/edtudname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Put name"
        />

    <EditText
        android:id="@+id/edtudprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Put price"
        />

    <EditText
        android:id="@+id/edtudsize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Put size"
        />
    <EditText
        android:id="@+id/edtudstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Put status"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/btnoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oke"
            />

        <Button
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            />

    </LinearLayout>
</LinearLayout>